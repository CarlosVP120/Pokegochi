<div>
<h1>Your Pokemon</h1>

<p><strong>Name:</strong> <%= @pokemon_data['name'] %></p>
<p><strong>Height:</strong> <%= @pokemon_data['height'] %></p>
<p><strong>Weight:</strong> <%= @pokemon_data['weight'] %></p>
<p><strong>Level:</strong> <%= @pokemon_level %></p>

<h2>Berries</h2>
<ul>
  <% @berries.each do |berry| %>
    <li>
      <%= berry['name'] %>
      <%= link_to 'Feed', feed_pokemon_path(level: @pokemon_level), method: :post %>
    </li>
  <% end %>
</ul>

</div>
